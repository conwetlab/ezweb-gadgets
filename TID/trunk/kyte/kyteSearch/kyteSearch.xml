	<Event name="authorName" type="text" label="author name" friendcode="authorName"/>
	<Event name="authorURI" type="text" label="author URI" friendcode="authorURI"/>
</Platform.Wiring>
<Platform.Context>
	<Context name="language" type="text" concept="language"/>
</Platform.Context>
