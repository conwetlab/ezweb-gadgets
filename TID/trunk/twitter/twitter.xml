<?xml version="1.0" encoding="UTF-8"?>
<Template schemaLocation="http://morfeo-project.org/2007/Template">
  <!-- Meta tags define gadgets properties -->
  <Catalog.ResourceDescription>
    <Vendor>Morfeo</Vendor>
    <Name>Twitter</Name>
    <Version>2.2</Version>
    <Author>lmayllon</Author>

    <Mail>luismarcos.ayllon@panel.es</Mail>
    <Description>This gadget provides an engaging visual way to see and send messages into Twitter system. Configure your Twitter account in the gadget preferences and start sharing your state. Connect this gadget to FeedReader, RadioStation, etc. to either publish a message automatically or show you an inline draft to modificate.</Description>
    <ImageURI>http://demo.ezweb.morfeo-project.org/repository/twitter/images/twitter_logo_s.png</ImageURI>
    <WikiURI>http://forge.morfeo-project.org/wiki/index.php/Gadgets_2009</WikiURI>
  </Catalog.ResourceDescription>
  
  <!-- EzWeb Gadgets Tags -->
  <Platform.Preferences>
    <Preference name="twitter_user" type="text" description="Your username in Twitter" label="Username"/>
    <Preference name="twitter_pass" type="password" description="Your password in Twitter" label="Password"/>
    <Preference name="limit_messages" type="number" description="Limit messages" label="Limit Messages" default="5"/>
    <Preference name="status_behavior" type="list" label="On new event, draft message is" description="On new event, draft message is" default="cleared">
			<Option value="cleared" name="Cleared"/>
			<Option value="kept" name="Kept"/>
		</Preference>
</Platform.Preferences>
  
  <!-- EzWeb Gadget Persistent State -->
  <Platform.StateProperties>
  </Platform.StateProperties>
  
  <!-- EzWeb Gadget Data Wiring -->
  <Platform.Wiring>
     <Slot name="input_to_message" type="text" label="Input to draft message" friendcode="message" />
     <Slot name="auto_message" type="text" label="Automatically posted message" friendcode="message" />
     <Event name="posted_message" type="text" label="Automatically posted message" friendcode="message" />
  </Platform.Wiring>
  
  <Platform.Link>
    <XHTML href="http://demo.ezweb.morfeo-project.org/repository/twitter/twitter.html"/>
  </Platform.Link>
  
  <Platform.Rendering width="10" height="30"/>
  
  <Platform.Context>
  </Platform.Context> 
</Template>

