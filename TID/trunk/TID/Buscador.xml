<?xml version="1.0" encoding="utf-8"?>
<Template schemaLocation="http://morfeo-project.org/2007/Template">
  <!-- Meta tags define gadgets properties -->
  <Catalog.ResourceDescription>
    <Vendor>Morfeo</Vendor>
    <Name>Busca TID</Name>
    <Version>0.6</Version>
    <Author>ezweb</Author>
    <Mail>ezwebplatform-feedback@lists.morfeo-project.org</Mail>
    <Description>Gadget que permite realizar búsquedas de información en el KID y en otros sistemas de gestión del conocimiento de Telefónica I+d (foros, blogs, wikis, Banco de Ideas).</Description>
    <ImageURI>http://ezweb.tid.es/repository/TID/buscakid.png</ImageURI>
    <iPhoneImageURI>http://ezweb.tid.es/repository/TID/buscakid.png</iPhoneImageURI>
    <WikiURI>http://trac.morfeo-project.org/trac/ezwebplatform/wiki/browser</WikiURI>
    <Organization>TID</Organization>
  </Catalog.ResourceDescription>
  <!-- EzWeb Gadgets Tags -->
  <Platform.Preferences>
     <Preference name="urlPref" type="text" description="HTML base URL" label="Base URL" default="https://biblus.cpd.hi.inet/kid/servicio_busqueda/buscadorEZWEB.jsp?docKID=1&amp;foros=1"/>
     <Preference name="homeUrl" type="text" description="Home page URL" label="Home page URL" default="https://biblus.cpd.hi.inet/kid/servicio_busqueda/buscadorEZWEB.jsp?docKID=1&amp;foros=1"/>
     <Preference name="refreshingTime" type="text" description="Refreshing interval (minutes)" label="Refresh every... (minutes)" default="0"/>
     <Preference name="qt_pref" type="text" description="qt" label="qt" default=""/>
  </Platform.Preferences>
  <!-- EzWeb Gadget Persistent State -->
  <Platform.StateProperties>
  	<Property name="source" type="text" label="source" default=""/>
  	<Property name="sourceUrl" type="text" label="source" default=""/>  	
  </Platform.StateProperties>
  <!-- EzWeb Gadget Data Wiring -->
  <Platform.Wiring>
  	<Slot name="parameters" type="text" label="parameters" friendcode="parameters"/>
    <Slot name="qt_slot" type="text" label="qt" friendcode="qt"/>
    <Event name="qt_event" type="text" label="qt" friendcode="qt"/>
  </Platform.Wiring>
  <Platform.Link>
    <XHTML href="http://ezweb.tid.es/repository/TID/Buscador.html"/>
  </Platform.Link>
  <Platform.Rendering width="10" height="20"/>
  <MenuColor></MenuColor>
</Template>

