  <!-- Meta tags define gadgets properties -->
  <Catalog.ResourceDescription>
    <Vendor>Morfeo</Vendor>
    <Name>Bandeja de Averias</Name>
    <Version>1.4</Version>
    <Author>miglesia</Author>
    <Mail>miglesia@pegaso.ls.fi.upm.es</Mail>
