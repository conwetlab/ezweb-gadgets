<?xml version="1.0" encoding="UTF-8"?>
<Template schemaLocation="http://morfeo-project.org/2007/Template">
  <!-- Meta tags define gadgets properties -->
  <Catalog.ResourceDescription>
    <Vendor>Morfeo</Vendor>
    <Name>Flickr</Name>
    <Version>2.1</Version>
    <Author>jjmr</Author>
    <Mail>jjmr@tid.es</Mail>
    <Description>This gadget version provide an engaging visual way to explore tagged photos through a fairly comprehensive web-service API</Description>
    <ImageURI>http://demo.ezweb.morfeo-project.org/repository/flickr/flickr.png</ImageURI>
    <WikiURI>http://trac.morfeo-project.org/trac/ezwebplatform/wiki/Flickr</WikiURI>
  </Catalog.ResourceDescription>
  
  <!-- EzWeb Gadgets Tags -->
  <Platform.Preferences>
    <!--<Preference name="url" type="text" description="descripcion" label="url" />-->
    <Preference name="defaultSearch" type="text" description="defaultSearch" label="Default keyword" default="ezweb"/>
  </Platform.Preferences>
  
  <!-- EzWeb Gadget Persistent State -->
  <Platform.StateProperties>
  </Platform.StateProperties>
  
  <!-- EzWeb Gadget Data Wiring -->
  <Platform.Wiring>
    <Slot name="keyword" type="text" label="keyword" friendcode="keyword" />
    <Event name="urlImage" type="text" label="urlImage" friendcode="imageUrl" />
  </Platform.Wiring>
  
  <Platform.Link>
    <XHTML href="http://demo.ezweb.morfeo-project.org/repository/flickr/flickr.html"/>
  </Platform.Link>
  
  <Platform.Rendering width="7" height="18"/>
  
  <Platform.Context>
  </Platform.Context> 
</Template>
