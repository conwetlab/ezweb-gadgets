<?xml version="1.0" encoding="utf-8"?>
<Template schemaLocation="http://morfeo-project.org/2007/Template">
  <!-- Meta tags define gadgets properties -->
  <Catalog.ResourceDescription>
    <Vendor>Morfeo</Vendor>
    <Name>My Paint</Name>
    <Version>1.0</Version>
    <Author>jmostazo</Author>
    <Mail>jmostazo@pegaso.ls.fi.upm.es</Mail>
    <Description>Este gadget muestra un Applet Java que te permite realizar tus propiso dibujos.</Description>
    <ImageURI>http://demo.ezweb.morfeo-project.org/repository/paint/paint.png</ImageURI>
    <WikiURI>http://trac.morfeo-project.org/trac/ezwebplatform/wiki/Paint</WikiURI>
  </Catalog.ResourceDescription>
  <!-- EzWeb Gadgets Tags -->
  <Platform.Preferences>
    <Preference name="width" type="text" label="Anchura del Applet" description="Anchura del Applet a mostrar (320-1000)" default="350"/>
    <Preference name="height" type="text" label="Altura del Applet" description="Altura del Applet a mostrar (200-1000)" default="350"/>
  </Platform.Preferences>
  <!-- EzWeb Gadget Persistent State -->
  <Platform.StateProperties>
  </Platform.StateProperties>
  <!-- EzWeb Gadget Data Wiring -->
  <Platform.Wiring>
  </Platform.Wiring>
  <Platform.Link>
    <XHTML href="http://demo.ezweb.morfeo-project.org/repository/paint/paint.html"/>
  </Platform.Link>
  <Platform.Rendering width="7" height="26"/>
</Template>
