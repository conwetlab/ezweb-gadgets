<?xml version="1.0" encoding="UTF-8"?>
<Template schemaLocation="http://morfeo-project.org/2007/Template">
  <!-- Meta tags define gadgets properties -->
  <Catalog.ResourceDescription>
    <Vendor>Morfeo</Vendor>
    <Name>WordReference</Name>
    <Version>0.31</Version>
    <Author>jaimegc</Author>
    <Mail>jaimegc@tid.es</Mail> 
    <Description>Translate any word to a great number of languages using WordReference dictionary. You can enter a word in the input box as well as translate a word given by a connected gadget.</Description>
    <ImageURI>http://demo.ezweb.morfeo-project.org/repository/wordreference/wordreference.png</ImageURI>
    <WikiURI>http://forge.morfeo-project.org/wiki/index.php/Gadgets_EzWeb</WikiURI>
  </Catalog.ResourceDescription>
  <!-- EzWeb Gadgets Tags -->
  <Platform.Preferences>
	<Preference name="dictionary" type="list" label="dictionary" description="Dictionary" default="enes">
		<Option value="enes" name="English-Spanish"/>
		<Option value="esen" name="Spanish-English"/>
	</Preference>
  </Platform.Preferences>

  <!-- EzWeb Gadget Persistent State -->
  <Platform.StateProperties>
    
  </Platform.StateProperties>
  <!-- EzWeb Gadget Data Wiring -->
  <Platform.Wiring>
        <Slot name="keyword" type="text" label="Word" friendcode="keyword"/>
  </Platform.Wiring>
  <Platform.Link>
    <XHTML href="http://demo.ezweb.morfeo-project.org/repository/wordreference/wordreference.html"/>
  </Platform.Link>
  <Platform.Rendering width="7" height="13"/>
	
</Template>
