<?xml version="1.0" encoding="utf-8"?>
<Template schemaLocation="http://morfeo-project.org/2007/Template">
<!-- Meta tags define gadgets properties -->
	<Catalog.ResourceDescription>
		<Vendor>Morfeo</Vendor>
		<Name>ContextVariableViewer22</Name>
		<Version>2.0</Version>
		<Author>lmayllon</Author>
		<Mail>lma340@tid.es</Mail>
		<Description>Este gadget permite visualizar las variables de contexto declaradas</Description>
		<ImageURI>http://demo.ezweb.morfeo-project.org/repository/contextViewer/mirilla.jpg</ImageURI>
		<WikiURI>http://piccolo.ls.fi.upm.es:7000/contextViewer</WikiURI>
	</Catalog.ResourceDescription>
	<!-- EzWeb Gadgets Tags -->
	<Platform.Preferences>
	<Preference name="bg" type="text" description="descripcion" label="background color"/>
	<Preference name="textcolor" type="text" description="descripcion" label="text color"/>

	</Platform.Preferences>
	<!-- EzWeb Gadget Persistent State -->
	<Platform.StateProperties>
	</Platform.StateProperties>
	<!-- EzWeb Gadget Data Wiring -->
	<Platform.Wiring>
	</Platform.Wiring>
	<Platform.Context>
		<Context name="user" type="text" concept="user_name"/>
		<GadgetContext name="width" type="text" concept="width"/>
		<GadgetContext name="height" type="text" concept="height"/>
  	        <GadgetContext name="language" type="text" concept="language"/>
	</Platform.Context>
	<Platform.Link>
		<XHTML href="http://demo.ezweb.morfeo-project.org/repository/contextViewer/contextViewer2.html" />
	</Platform.Link>
	<Platform.Rendering width="1" height="15"/>
</Template>
