<?xml version="1.0" encoding="utf-8"?>
<Template schemaLocation="http://morfeo-project.org/2007/Template">
  <!-- Meta tags define gadgets properties -->
  <Catalog.ResourceDescription>
    <Vendor>Morfeo</Vendor>
    <Name>RSSReader</Name>
    <Version>2.0</Version>
    <Author>jlopez</Author>
    <Mail>jlopez@pegaso.ls.fi.upm.es</Mail>
    <Description>Este gadget muestra un feed RSS 2.0</Description>
    <ImageURI>http://demo.ezweb.morfeo-project.org/repository/rss/rss.jpg</ImageURI>
    <WikiURI>http://trac.morfeo-project.org/trac/ezwebplatform/wiki/RSSReader</WikiURI>
  </Catalog.ResourceDescription>
  <!-- EzWeb Gadgets Tags -->
  <Platform.Preferences>
    <Preference name="rssPref" type="text" label="Feed RSS" description="Origen del feed RSS a mostrar" default="http://morfeo-project.org/?feed=rss2"/>
  </Platform.Preferences>
  <!-- EzWeb Gadget Persistent State -->
  <Platform.StateProperties>
  </Platform.StateProperties>
  <!-- EzWeb Gadget Data Wiring -->
  <Platform.Wiring>
    <Slot name="rssUrl" type="text" label="rssUrl" friendcode="rssUrl"/>
  </Platform.Wiring>
  <Platform.Link>
    <XHTML href="http://demo.ezweb.morfeo-project.org/repository/rss/rssReader.html"/>
  </Platform.Link>
  <Platform.Rendering width="7" height="18"/>
</Template>
