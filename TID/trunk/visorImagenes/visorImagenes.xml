<?xml version="1.0" encoding="utf-8"?>
<Template schemaLocation="http://morfeo-project.org/2007/Template">
<!-- Meta tags define gadgets properties -->
	<Catalog.ResourceDescription>
		<Vendor>Morfeo</Vendor>
		<Name>Image Viewer</Name>
		<Version>1.04</Version>
		<Author>jmostazo</Author>
		<Mail>jmostazo@pegaso.ls.fi.upm.es</Mail>
		<Description>Watch your preferred images through this gadget and zoom into them. You should connect a Gadget like Flickr or Jogli to this gadget to watch the sent images.</Description>
		<ImageURI>http://demo.ezweb.morfeo-project.org/repository/visorImagenes/visorImagenes.png</ImageURI>
		<WikiURI>http://trac.morfeo-project.org/trac/ezwebplatform/wiki/VisorImagenes</WikiURI>
	</Catalog.ResourceDescription>

<!-- EzWeb Gadgets Tags -->
	<Platform.Preferences>
	</Platform.Preferences>

<!-- EzWeb Gadget Persistent State -->
	<Platform.StateProperties>
	</Platform.StateProperties>

	<Platform.Wiring>
		<Slot name="imageUrl" type="text" label="Image" friendcode="image"/>
		<Event name="sentUrl" type="text" label="ImageEvent" friendcode="sentUrl"/>
	</Platform.Wiring>

	<Platform.Link>
		<XHTML href="http://demo.ezweb.morfeo-project.org/repository/visorImagenes/visorImagenes.html"/>
	</Platform.Link>

	<Platform.Rendering width="7" height="30"/>

<!-- EzWeb Gadget Data Context -->
	<Platform.Context>
	</Platform.Context> 

</Template>
