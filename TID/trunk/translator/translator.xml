<?xml version="1.0" encoding="UTF-8"?>
<Template schemaLocation="http://morfeo-project.org/2007/Template">
  <!-- Meta tags define gadgets properties -->
  <Catalog.ResourceDescription>
    <Vendor>Morfeo</Vendor>
    <Name>Translator</Name>
    <Version>0.194</Version>
    <Author>jaimegc</Author>
    <Mail>jaimegc@tid.es</Mail>
    <Description>Translate any given text to a great number of languages using the Google translator engine.</Description>
    <ImageURI>http://demo.ezweb.morfeo-project.org/repository/translator/translator.jpg</ImageURI>
    <WikiURI>http://forge.morfeo-project.org/wiki/index.php/Gadgets_EzWeb#Gadget_traductor</WikiURI>
  </Catalog.ResourceDescription>
  <!-- EzWeb Gadgets Tags -->
  <Platform.Preferences>
  	<Preference name="theme" type="list" label="theme" description="Theme" default="blue">
		<Option value="blue" name="blue"/>
		<Option value="orange" name="orange"/>
		<Option value="red" name="red"/>
		<Option value="green" name="green"/>
	</Preference>
  </Platform.Preferences>

  <!-- EzWeb Gadget Persistent State -->
  <Platform.StateProperties>
  	<Property name="languages" type="text" label="languages"/>
  </Platform.StateProperties>
  <!-- EzWeb Gadget Data Wiring -->
  <Platform.Wiring>
	<Slot name="inputText" type="text" label="input Text" friendcode="text"/>
	<Event name="outputText" type="text" label="output Text" friendcode="text"/>
  </Platform.Wiring>
  <Platform.Context>
  	<Context name="language" type="text" concept="language"/>	
  </Platform.Context>
  <Platform.Link>
    <XHTML href="http://demo.ezweb.morfeo-project.org/repository/translator/translator.html"/>
  </Platform.Link>
  <Platform.Rendering width="5" height="12"/>
</Template>
