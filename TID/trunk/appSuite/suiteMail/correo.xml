<?xml version="1.0" encoding="UTF-8"?>
<Template schemaLocation="http://morfeo-project.org/2007/Template">
	<!-- Meta tags define gadgets properties -->
	<Catalog.ResourceDescription>
		<Vendor>SuiteApp</Vendor>
		<Name>Correo</Name>
		<Version>48.0</Version>
		<Author>veroyjose</Author>
		<Mail>vero@novanotio.es</Mail>
		<Description>Servicio de Correo electronico</Description>
		<ImageURI>http://demo.ezweb.morfeo-project.org/repository/appSuite/suiteMail/img/logomail.jpg</ImageURI>
		<WikiURI>http://noimage.com</WikiURI>
	</Catalog.ResourceDescription>
	<!-- EzWeb Gadgets Tags -->
<Platform.Preferences>
	  <Preference type="list" name="limiteMensajes" description="mensajes" label="Numeo de mensajes">
	    <Option name="2" value="2"/>
	    <Option name="4" value="4"/>
	    <Option name="5" value="5"/>
	    <Option name="Todos" value="Todos"/>
	  </Preference>
	</Platform.Preferences>
	<!-- EzWeb Gadget Persistent State -->
	<Platform.StateProperties>
	</Platform.StateProperties>
	<!-- EzWeb Gadget Data Wiring -->
	<Platform.Wiring>
	 <Slot name="to" type="text" label="to" friendcode="email"/>
	 <Slot name="message" type="text" label="message" friendcode="message"/>
	</Platform.Wiring>
	<Platform.Context>
		<Context name="user" type="text" concept="user_name"/>
  </Platform.Context>
	<Platform.Link>
		<XHTML href="http://demo.ezweb.morfeo-project.org/repository/appSuite/suiteMail/bandeja.html"/>
	</Platform.Link>
	<Platform.Rendering width="7" height="28"/>
</Template>
