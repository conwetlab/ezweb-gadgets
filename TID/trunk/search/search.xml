<?xml version="1.0" encoding="UTF-8"?>
<Template schemaLocation="http://morfeo-project.org/2007/Template">
<!-- Meta tags define gadgets properties -->
	<Catalog.ResourceDescription>
		<Vendor>Morfeo</Vendor>
		<Name>Search</Name>
		<Version>1.25</Version>
		<Author>jjmr</Author>
		<Mail>jjmr@tid.es</Mail>
		<Description>This gadget sends as an event the text entered in the input box. Connect it to any gadget which needs a keyword, a name, a city, etc. and you will have an easy way of passing data to those gadgets.</Description>
		<ImageURI>http://demo.ezweb.morfeo-project.com/repository/search/search.png</ImageURI>
		<WikiURI>http://open.movilforum.com/wiki/index.php/EzWeb/Search</WikiURI>
	</Catalog.ResourceDescription>
	<!-- EzWeb Gadgets Tags -->
	<Platform.Preferences>
		<Preference name="text" type="text" description="text shown in front of the text field" label="label for the input box" default="keyword:"/>
		<Preference name="theme" type="list" label="Color Theme" description="Color Theme" default="blue">
			<Option value="orange" name="Orange"/>
			<Option value="green" name="Green"/>
			<Option value="blue" name="Blue"/>
			<Option value="red" name="Red"/>
		</Preference>
	</Platform.Preferences>
	<!-- EzWeb Gadget Persistent State -->
	<Platform.StateProperties>
	</Platform.StateProperties>
	<!-- EzWeb Gadget Data Wiring -->
	<Platform.Wiring>
		<Event name="keyword" type="text" label="keyword" friendcode="keyword"/>
	</Platform.Wiring>
	<Platform.Link>
		<XHTML href="http://demo.ezweb.morfeo-project.com/repository/search/search.html"/>
	</Platform.Link>
	<Platform.Rendering width="7" height="5"/>
</Template>
