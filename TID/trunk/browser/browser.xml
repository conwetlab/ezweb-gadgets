<?xml version="1.0" encoding="utf-8"?>
<Template schemaLocation="http://morfeo-project.org/2007/Template">
  <!-- Meta tags define gadgets properties -->
  <Catalog.ResourceDescription>
    <Vendor>Morfeo</Vendor>
    <Name>Web Browser</Name>
    <Version>0.5</Version>
    <Author>pjm</Author>
    <Mail>pjm@tid.es</Mail>
    <Description>Gadgets that renders an html page</Description>
    <ImageURI>http://demo.ezweb.morfeo-project.org/repository/browser/browser.jpg</ImageURI>
    <WikiURI>http://trac.morfeo-project.org/trac/ezwebplatform/wiki/browser</WikiURI>
  </Catalog.ResourceDescription>
  <!-- EzWeb Gadgets Tags -->
  <Platform.Preferences>
    
  </Platform.Preferences>
     <Preference name="htmlVerb" type="list" description="HTML verb" label="HTML verb" default="GET">
       <Option value="GET" name="GET"/>
       <Option value="POST" name="POST"/>
     </Preference>
     <Preference name="urlPref" type="text" description="HTML base URL" label="Base URL" />
     <Preference name="homeUrl" type="text" description="Home page URL" label="Home page URL"/>
     <Preference name="refreshingTime" type="text" description="Refreshing interval (minutes)" label="Refresh every... (minutes)" default="0"/>
  <!-- EzWeb Gadget Persistent State -->
  <Platform.StateProperties>
	<Property name="source" type="text" label="source"/>
  	<Property name="sourceUrl" type="text" label="source URL"/>
  </Platform.StateProperties>
  <!-- EzWeb Gadget Data Wiring -->
  <Platform.Wiring>
    <Slot name="url" type="text" label="url" friendcode="url"/>
    <Slot name="parameters" type="text" label="paremeters" friendcode="parameters"/>
  </Platform.Wiring>
  <Platform.Link>
    <XHTML href="http://demo.ezweb.morfeo-project.org/repository/browser/browser.html"/>
  </Platform.Link>
  <Platform.Rendering width="15" height="26"/>
</Template>

