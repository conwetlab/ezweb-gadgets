<?xml version="1.0" encoding="utf-8"?>
<Template schemaLocation="http://morfeo-project.org/2007/Template">
  <!-- Meta tags define gadgets properties -->
  <Catalog.ResourceDescription>
    <Vendor>Morfeo</Vendor>
    <Name>Web Browser</Name>
    <Version>0.2</Version>
    <Author>pjm</Author>
    <Mail>pjm@tid.es</Mail>
    <Description>Gadgets that renders an html page</Description>
    <ImageURI>http://demo.ezweb.morfeo-project.org/repository/browser/browser.jpg</ImageURI>
    <WikiURI>http://trac.morfeo-project.org/trac/ezwebplatform/wiki/browser</WikiURI>
  </Catalog.ResourceDescription>
  <!-- EzWeb Gadgets Tags -->
  <Platform.Preferences>
    
  </Platform.Preferences>
     <Preference name="urlPref" type="text" description="HTML page URL" label="Page URL" />
  <!-- EzWeb Gadget Persistent State -->
  <Platform.StateProperties>
  </Platform.StateProperties>
  <!-- EzWeb Gadget Data Wiring -->
  <Platform.Wiring>
    <Slot name="url" type="text" label="url" friendcode="url"/>
  </Platform.Wiring>
  <Platform.Link>
    <XHTML href="http://demo.ezweb.morfeo-project.org/repository/browser/browser.html"/>
  </Platform.Link>
  <Platform.Rendering width="15" height="26"/>
</Template>

