<Template schemaLocation="http://morfeo-project.org/2007/Template">
<!-- Meta tags define gadgets properties -->
<Catalog.ResourceDescription>
<Vendor>Morfeo</Vendor>
<Name>Mobile Agenda</Name>
<Version>1.4</Version>
<Author>fabio</Author>
<Mail>fabio@tid.es</Mail>
<Description>Consulta de agenda utilizando la API de Open MovilForum.</Description>
<ImageURI>http://demo.ezweb.morfeo-project.org/repository/agenda/agenda.png</ImageURI>
<WikiURI>http://open.movilforum.com/wiki/index.php/EzWeb/MobileAgenda</WikiURI>
</Catalog.ResourceDescription>
<!-- EzWeb Gadgets Tags -->
<Platform.Preferences>
	<Preference name="openagenda_url" type="text" description="Open MovilForum Agenda URI" default="http://localhost:8080/openmovilforum/agenda" label="Service URI"/>
	<Preference name="login" type="text" description="Source Telephone Number" label="Source Telephone Number"/>
	<Preference name="password" type="password" description="Password" label="Password"/>
</Platform.Preferences>
<!-- EzWeb Gadget Persistent State -->
<Platform.StateProperties>
</Platform.StateProperties>
<!-- EzWeb Gadget Data Wiring -->
<Platform.Wiring>
	<Event name="mobilephone" type="text" label="mobilephone" friendcode="phone"/>
	<Event name="businessphone" type="text" label="businessphone" friendcode="phone"/>
	<Event name="homephone" type="text" label="homephone" friendcode="phone"/>
	<Event name="email" type="text" label="email" friendcode="email"/>
	<Event name="address" type="text" label="address" friendcode="address"/>
</Platform.Wiring>
<!-- EzWeb Gadget Context -->
<Platform.Context>
    <GadgetContext name="width" type="text" concept="widthInPixels"/>
    <GadgetContext name="height" type="text" concept="heightInPixels"/> 
</Platform.Context>
<Platform.Link>
	<XHTML href="http://demo.ezweb.morfeo-project.org/repository/agenda/agenda_1.4.html"/>
</Platform.Link>
<Platform.Rendering width="7" height="18"/>
</Template>
