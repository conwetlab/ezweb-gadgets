<?xml version="1.0" encoding="utf-8"?>
<Template schemaLocation="http://morfeo-project.org/2007/Template">
  <!-- Meta tags define gadgets properties -->
  <Catalog.ResourceDescription>
    <Vendor>Morfeo</Vendor>
    <Name>YouTube Video Search</Name>
    <Version>1.41</Version>
    <Author>agarcia</Author>
    <Mail>abgp@tid.es</Mail>
    <Description>buscador de videos youtube y selector de peliculas</Description>
    <ImageURI>http://demo.ezweb.morfeo-project.org/repository/youtube_search/tubesearch.jpeg</ImageURI>
    <WikiURI>http://trac.morfeo-project.org/trac/ezwebplatform/wiki/TubeSearch</WikiURI>
  </Catalog.ResourceDescription>
  <!-- EzWeb Gadgets Tags -->
  <Platform.Preferences>
		<Preference name="channel" type="list" description="default channel" label="canal por defecto"  default="6">
			<Option value="0" name="Ultimos destacados"/>
			<Option value="1" name="Superfavoritos"/>
			<Option value="2" name="Mas valorados"/>
			<Option value="3" name="Mas vistos"/>
			<Option value="4" name="Mas comentados"/>
			<Option value="5" name="Anadidos recientemente"/>
			<Option value="6" name="Películas"/>
		</Preference>
		<Preference name="region" type="list" description="region" label="region"  default="US">
			<Option value="US" name="Estados Unidos"/>
			<Option value="DE" name="Alemania"/>
			<Option value="AU" name="Australia"/>
			<Option value="BR" name="Brasil"/>
			<Option value="CA" name="Canadá"/>
			<Option value="KR" name="Corea del Sur"/>
			<Option value="ES" name="España"/>
			<Option value="FR" name="Francia"/>
			<Option value="GB" name="Gran Bretaña"/>
			<Option value="HK" name="Hong Kong"/>
			<Option value="IE" name="Irlanda"/>
			<Option value="IT" name="Italia"/>
			<Option value="JP" name="Japón"/>
			<Option value="MX" name="México"/>
			<Option value="NZ" name="Nueva Zelanda"/>
			<Option value="PL" name="Polonia"/>
			<Option value="RU" name="Rusia"/>
			<Option value="TW" name="Taiwán"/>
		</Preference>
  </Platform.Preferences>
  <!-- EzWeb Gadget Persistent State -->
  <Platform.StateProperties>
  </Platform.StateProperties>
  <!-- EzWeb Gadget Data Wiring -->
  <Platform.Wiring>
    <Event name="rssUrl" type="text" label="rssUrl" friendcode="youtube_url"/>
    <Event name="place" type="text" label="place" friendcode="address"/>
    <Event name="title" type="text" label="title" friendcode="title"/>
    <Event name="poi" type="text" label="poi" friendcode="poi"/>
	<Slot name="keyword" type="text" label="keyword" friendcode="keyword"/>
  </Platform.Wiring>
  <Platform.Link>
    <XHTML href="http://demo.ezweb.morfeo-project.org/repository/youtube_search/tube_iptv_search.html"/>
  </Platform.Link>
  <Platform.Rendering width="7" height="26"/>
</Template>
