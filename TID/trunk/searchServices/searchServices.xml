<?xml version="1.0" encoding="UTF-8"?>
<Template schemaLocation="http://morfeo-project.org/2007/Template">
  <!-- Meta tags define gadgets properties -->
  <Catalog.ResourceDescription>
    <Vendor>Morfeo</Vendor>
    <Name>SearchServices</Name>
    <Version>0.22</Version>
    <Author>jaimegc</Author>
    <Mail>jaimegc@tid.es</Mail>
    <Description>Search Services</Description>
       <ImageURI>http://demo.ezweb.morfeo-project.org/repository/notepad/notepad.jpg</ImageURI>
    <WikiURI>http://forge.morfeo-project.org/wiki/index.php/Gadgets_EzWeb</WikiURI>
  </Catalog.ResourceDescription>
  <!-- EzWeb Gadgets Tags -->
  <Platform.Preferences>
  	<Preference name="count" type="text" label="Items per page(max 200)" description="Elements per page" default="10"/>
  </Platform.Preferences>

  <!-- EzWeb Gadget Persistent State -->
  <Platform.StateProperties>
    
  </Platform.StateProperties>
  <!-- EzWeb Gadget Data Wiring -->
  <Platform.Wiring>
	<Slot name="search" type="text" label="Search" friendcode="keyword"/>
	<Slot name="locality" type="text" label="Locality" friendcode="locality"/>
	<Slot name="latLngCoord" type="text" label="Lat/Long Coordinates" friendcode="latLngCoord"/>
	<Slot name="radius" type="text" label="Search radius in Km" friendcode="radius"/>
	
	<Event name="position" type="text" label="LatLongPosition" friendcode="latLngCoord"/>
	<Event name="address" type="text" label="Address" friendcode="address"/>
	<Event name="serviceName" type="text" label="Service Name" friendcode="keyword"/>
	<Event name="telephone" type="text" label="Telephone" friendcode="telephone"/>
	<Event name="url" type="text" label="Url" friendcode="url"/>
	
  </Platform.Wiring>
  <Platform.Context>
	<Context name="language" type="text" concept="language"/>
  </Platform.Context>
  <Platform.Link>
    <XHTML href="http://localhost/repository/searchServices/searchServices.html"/>
  </Platform.Link>
  <Platform.Rendering width="11" height="19"/>
</Template>
