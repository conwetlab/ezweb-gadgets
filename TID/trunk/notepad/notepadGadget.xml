<?xml version="1.0" encoding="utf-8"?>
<Template schemaLocation="http://morfeo-project.org/2007/Template">
  <!-- Meta tags define gadgets properties -->
  <Catalog.ResourceDescription>
    <Vendor>Morfeo</Vendor>
    <Name>Notepad</Name>
    <Version>1.5</Version>
    <Author>jmartin</Author>
    <Mail>jjmr@tid.es</Mail>
    <Description>Add your personal notes, reminders, warnings... and choose the color to show them in your preferences! Take this gadget out of your grid and use it as a sticky note.</Description>
    <ImageURI>http://ezweb.tid.es/repository/ezweb-gadgets/notepad/notepad_1.5/notepad.jpg</ImageURI>
    <WikiURI>http://forge.morfeo-project.org/wiki/index.php/Gadgets_EzWeb#Gadget_Notepad</WikiURI>
  </Catalog.ResourceDescription>
  <!-- EzWeb Gadgets Tags -->
  <Platform.Preferences>
    <Preference name="bg" type="list" label="Background Color" description="Background Color" default="#ffffff">
        <Option value="#ffffff" name="White"/>
        <Option value="#e3dedb" name="Gray"/>
        <Option value="#ffeeaa" name="Yellow"/>
        <Option value="#d5f6ff" name="Blue"/>
        <Option value="#dde9af" name="Green"/>
        <Option value="#ffd5d5" name="Pink"/>
    </Preference>
    <Preference name="textcolor" type="list" label="Font Color" description="Font Color" default="#000000">
        <Option value="#000000" name="Black"/>
        <Option value="#d40000" name="Red"/>
        <Option value="#800080" name="Purple"/>
        <Option value="#2c5aa0" name="Blue"/>
        <Option value="#803300" name="Brown"/>
        <Option value="#6c5d53" name="Gray"/>
        <Option value="#165016" name="Green"/>
        <Option value="#ff6600" name="Orange"/>
    </Preference>
  </Platform.Preferences>
  <!-- EzWeb Gadget Persistent State -->
  <Platform.StateProperties>
    <Property name="nota" type="text" label="note"/>
  </Platform.StateProperties>
  <!-- EzWeb Gadget Data Wiring -->
  <Platform.Wiring>
	<Slot name="text" type="text" label="text" friendcode="text"/>
  </Platform.Wiring>
  <Platform.Context>
    <Context name="language" type="text" concept="language"/>
    <GadgetContext name="height" type="text" concept="heightInPixels"/>
    <GadgetContext name="width" type="text" concept="widthInPixels"/>
  </Platform.Context> 
  <Platform.Link>
    <XHTML href="http://ezweb.tid.es/repository/ezweb-gadgets/notepad/notepad_1.5/notepad.html" />
  </Platform.Link>
  <Platform.Rendering width="6" height="11"/>
</Template>
