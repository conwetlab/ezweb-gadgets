<?xml version="1.0" encoding="utf-8"?>
<Template schemaLocation="http://morfeo-project.org/2007/Template">
  <!-- Meta tags define gadgets properties -->
  <Catalog.ResourceDescription>
    <Vendor>Morfeo</Vendor>
    <Name>Notepad</Name>
    <Version>1.1</Version>
    <Author>jmartin</Author>
    <Mail>jjmr@tid.es</Mail>
    <Description>Add your personal notes, reminders, warnings... and choose the color to show them in your preferences! Take this gadget out of your grid and use it as a sticky note.</Description>
    <ImageURI>http://demo.ezweb.morfeo-project.org/repository/notepad/notepad.jpg</ImageURI>
    <WikiURI>http://trac.morfeo-project.org/trac/ezwebplatform/wiki/Notepad</WikiURI>
  </Catalog.ResourceDescription>
  <!-- EzWeb Gadgets Tags -->
  <Platform.Preferences>
    <Preference name="bg" type="text" description="background color" label="background color"/>
    <Preference name="textcolor" type="text" description="font color" label="text color"/>
  </Platform.Preferences>
  <!-- EzWeb Gadget Persistent State -->
  <Platform.StateProperties>
    <Property name="nota" type="text" label="note"/>
  </Platform.StateProperties>
  <!-- EzWeb Gadget Data Wiring -->
  <Platform.Wiring></Platform.Wiring>
  
  <Platform.Link>
    <XHTML href="http://demo.ezweb.morfeo-project.org/repository/notepad/notepad.html" />
  </Platform.Link>
  <Platform.Rendering width="6" height="11"/>
</Template>
