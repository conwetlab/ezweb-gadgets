<?xml version="1.0" encoding="UTF-8"?>
<Template schemaLocation="http://morfeo-project.org/2007/Template">
  <!-- Meta tags define gadgets properties -->
  <Catalog.ResourceDescription>
    <Vendor>Morfeo</Vendor>
    <Name>Map Viewer</Name>
    <Version>1.3</Version>
    <Author>fabio</Author>
    <Mail>fabio@tid.es</Mail>
    <Description>Este gadget presenta la ubicacion en el plano de una determinada direccion o coordenadas UTM. Si se le pasa la precision, dibuja un circulo con el area seleccionada</Description>
    <ImageURI>http://ezweb.movilforum.com/repository/mapa/google_maps.jpg</ImageURI>
    <iPhoneImageURI>http://demo.ezweb.morfeo-project.org/repository/iphone/google_mapsIPhone.png</iPhoneImageURI>
    <WikiURI>http://open.movilforum.com/wiki/index.php/EzWeb/MapViewer</WikiURI>
  </Catalog.ResourceDescription>
  <!-- EzWeb Gadgets Tags -->
  <Platform.Preferences>
  </Platform.Preferences>
  <!-- EzWeb Gadget Persistent State -->
  <Platform.StateProperties>
  </Platform.StateProperties>
  <!-- EzWeb Gadget Data Wiring -->
  <Platform.Wiring>
    <Slot name="address" type="text" label="Address" friendcode="address"/>
    <Slot name="utmCoord" type="text" label="UTM Coord." friendcode="utmCoord" description="UTM X Y Coordinates and precision (optional), comma separated"/>
  </Platform.Wiring>
  <Platform.Link>
    <XHTML href="http://demo.ezweb.morfeo-project.org/repository/localizador/localizadorPequeno1.3.html"/>
  </Platform.Link>
  <Platform.Rendering width="9" height="25"/>
</Template>
