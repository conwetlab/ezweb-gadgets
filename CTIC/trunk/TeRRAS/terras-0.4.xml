<Template schemaLocation="http://morfeo-project.org/2007/Template">

  <!-- Meta tags define gadgets properties -->
  <Catalog.ResourceDescription>
    <Name>TeRRAS</Name>
    <Version>0.4</Version>
    <Author>Iván Mínguez</Author>
    <Mail>ivan.minguez@fundacionctic.org</Mail>
    <Vendor>CTIC</Vendor>
    <Description>Gadgets to use the TeRRAS library on EzWeb</Description>
    <ImageURI>http://idi.fundacionctic.org/ezweb/gadgets/TeRRAS/ezterras.png</ImageURI>
    <WikiURI>http://idi.fundacionctic.org/ezweb/gadgets/TeRRAS/doc/terras-0.4.html</WikiURI>
  </Catalog.ResourceDescription>

  <!-- EzWeb Gadgets Tags -->
  <Platform.Preferences>
    <Preference name="terrasEndpoint" type="text" description="TeRRAS Endpoint" label="TeRRAS Endpoint" default="http://idi.fundacionctic.org/terras/endpoint"/>
  </Platform.Preferences>

  <!-- EzWeb Gadget Persistent State -->
  <Platform.StateProperties>
  </Platform.StateProperties>

  <Platform.Wiring>
    <Event name="link" type="text" label="link" friendcode="link"/>
  </Platform.Wiring>

  <Platform.Link>
    <XHTML href="http://idi.fundacionctic.org/ezweb/gadgets/TeRRAS/terras-0.4.html"/>
  </Platform.Link>

  <Platform.Rendering width="7" height="30"/>

  <!-- EzWeb Gadget Data Context -->
  <Platform.Context>
  </Platform.Context> 

</Template>

